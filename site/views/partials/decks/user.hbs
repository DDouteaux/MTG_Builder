<style>
    #createDeck:hover{
            background-color: #212529;
        color: white;
    }
</style>

<div class="row">
    <div class="col-8">
        <h1 class="text-left">
            Mes decks
        </h1>
    </div>
    <div class="col-4">
        <button id="createDeck" type="button" class="btn btn-default float-right" data-toggle="modal" data-target="#createDeckModal">
            <i class="fas fa-plus"></i>&nbsp;Créer un deck
        </button>
    </div>
</div>

<hr>

<div class="modal fade" id="createDeckModal" tabindex="-1" role="dialog" aria-labelledby="createDeckModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createDeckModalLabel">Créer un deck</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Veuillez renseigner les champs suivants.
                <div class="mt-3"></div>
                <form class="">
                    <div class="form-group row">
                        <label for="inputTitle" class="col-sm-3 col-form-label">Titre</label>
                        <div class="col-sm-9">
                            <input class="form-control" id="title" placeholder="Titre">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="format" class="col-sm-3 col-form-label">Format</label>
                        <div class="col-sm-9">
                            <input class="form-control" id="format" placeholder="Format">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="source" class="col-sm-3 col-form-label">Source</label>
                        <div class="col-sm-9">
                            <input class="form-control" id="format" placeholder="Source">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" id="description" rows="3"></textarea>
                        </div>
                    </div>
                </form>
            </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="createDeckDismiss" data-dismiss="modal">Annuler</button>
            <button onclick="sendCreateDeckRequest()" id="createDeckValidate" class="btn btn-success" code="code" name="name">Créer</button>
        </div>
    </div>
  </div>
</div>